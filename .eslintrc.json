{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard-with-typescript",
    "plugin:react/recommended",
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "next/core-web-vitals"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "no-duplicate-imports": "warn",
    // as eslintrc is unable to find typescript aliases,
    // disabled this option.
    // TODO eslint-import-resolver-typescript might help
    "import/no-unresolved": "off",
    "react/react-in-jsx-scope": "off",
    "react/no-unknown-property": "error",
    "no-unused-vars": "off",
    "no-console": "warn",
    "@typescript-eslint/explicit-function-return-type": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  }
}



